import math

choice = input('Выберете необходимую функцию из списка: сложение, вычитание, умножение, деление, степень, логарифм, округление :>')

if choice.lower() == 'сложение':
    a = int(input('Введите первое слогаемое :>'))
    b = int(input('Введите второе слогаемое :>'))
    print('Сумма: ', a + b)
    
elif choice.lower() == 'вычитание':
    a = int(input('Введите число из которого будет вычитать :>'))
    b = int(input('Введите вычитаемое :>'))
    print('Разность: ', a - b)
    
elif choice.lower() == 'умножение':
    a = int(input('Введите первый множитель :>'))
    b = int(input('Введите второй множитель :>'))
    print('Произведение: ', a * b)
    
elif choice.lower() == 'деление':
    a = int(input('Введите делимое :>'))
    b = int(input('Введите делитель отличный от нуля :>'))
    print('Частное: ', a / b)
    
elif choice.lower() == 'степень':
    a = int(input('Введите число :>'))
    b = int(input('Введите степень :>'))
    print('Степень: ', a ** b)
    
elif choice.lower() == 'логарифм':
    a = int(input('Введите число :> '))
    b = int(input('Введите оснеование логорифма :>'))
    print('Логарифм: ', math.log(a, b))
    
elif choice.lower() == 'округление':
    a = float(input('Введите число :>'))
    b = int(input('Введите колличество знаков после запятой :>'))
    print('Результат: ', round(a, b))
